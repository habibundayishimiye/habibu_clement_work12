<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    android:padding="@dimen/padding_medium">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_medium"
            style="@style/FormCardStyle">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_medium">

                <!-- Student Photo -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/student_photo"
                    style="@style/FormLabelStyle" />

                <ImageView
                    android:id="@+id/imageViewPhoto"
                    android:layout_width="@dimen/image_size_large"
                    android:layout_height="@dimen/image_size_large"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/margin_small"
                    android:scaleType="centerCrop"
                    android:background="@color/divider"
                    android:visibility="gone"
                    android:contentDescription="@string/student_photo" />

                <Button
                    android:id="@+id/btnSelectPhoto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Select Photo"
                    style="@style/SecondaryButtonStyle"
                    android:layout_marginBottom="@dimen/margin_medium" />

                <!-- Student ID -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/student_id"
                    style="@style/FormLabelStyle" />

                <EditText
                    android:id="@+id/editStudentId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/enter_student_id"
                    android:inputType="text"
                    style="@style/FormInputStyle"
                    android:layout_marginBottom="@dimen/margin_medium" />

                <!-- Student Name -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/student_name"
                    style="@style/FormLabelStyle" />

                <EditText
                    android:id="@+id/editStudentName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/enter_student_name"
                    android:inputType="textPersonName"
                    style="@style/FormInputStyle"
                    android:layout_marginBottom="@dimen/margin_medium" />

                <!-- Enrollment Date -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/enrollment_date"
                    style="@style/FormLabelStyle" />

                <Button
                    android:id="@+id/btnSelectDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/select_date"
                    android:textAlignment="textStart"
                    android:gravity="start|center_vertical"
                    android:paddingStart="@dimen/padding_small"
                    android:paddingEnd="@dimen/padding_small"
                    style="@style/FormInputStyle"
                    android:background="@android:drawable/edit_text"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="@dimen/margin_medium" />

                <!-- Age -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/student_age"
                    style="@style/FormLabelStyle" />

                <EditText
                    android:id="@+id/editAge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/enter_age"
                    android:inputType="number"
                    style="@style/FormInputStyle"
                    android:layout_marginBottom="@dimen/margin_medium" />

                <!-- Email -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/student_email"
                    style="@style/FormLabelStyle" />

                <EditText
                    android:id="@+id/editEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/enter_email"
                    android:inputType="textEmailAddress"
                    style="@style/FormInputStyle"
                    android:layout_marginBottom="@dimen/margin_medium" />

                <!-- Phone -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/student_phone"
                    style="@style/FormLabelStyle" />

                <EditText
                    android:id="@+id/editPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/enter_phone"
                    android:inputType="phone"
                    style="@style/FormInputStyle"
                    android:layout_marginBottom="@dimen/margin_medium" />

                <!-- Department (Dropdown/Spinner) -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/student_department"
                    style="@style/FormLabelStyle" />

                <Spinner
                    android:id="@+id/spinnerDepartment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/button_height_medium"
                    android:background="@android:drawable/edit_text"
                    android:padding="@dimen/padding_small"
                    android:layout_marginBottom="@dimen/margin_medium" />

                <!-- Status (Radio Buttons) -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/student_status"
                    style="@style/FormLabelStyle" />

                <RadioGroup
                    android:id="@+id/radioGroupStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/margin_medium">

                    <RadioButton
                        android:id="@+id/radioActive"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/status_active"
                        android:textSize="@dimen/text_size_small" />

                    <RadioButton
                        android:id="@+id/radioInactive"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/status_inactive"
                        android:textSize="@dimen/text_size_small" />

                    <RadioButton
                        android:id="@+id/radioGraduated"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/status_graduated"
                        android:textSize="@dimen/text_size_small" />
                </RadioGroup>

                <!-- Active Checkbox -->
                <CheckBox
                    android:id="@+id/checkBoxActive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Currently Active"
                    android:textSize="@dimen/text_size_small"
                    android:layout_marginBottom="@dimen/margin_medium" />

                <!-- Save Button -->
                <Button
                    android:id="@+id/btnSave"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/save"
                    style="@style/PrimaryButtonStyle"
                    android:layout_marginTop="@dimen/margin_medium" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</ScrollView>

