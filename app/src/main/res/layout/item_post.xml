<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- User Info Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:cardCornerRadius="20dp"
                app:cardBackgroundColor="#E0E0E0">

                <ImageView
                    android:id="@+id/imgAvatar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:contentDescription="User avatar" />
            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="12dp">

                <TextView
                    android:id="@+id/txtUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User Name"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#333333" />

                <TextView
                    android:id="@+id/txtPostTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2 hours ago"
                    android:textSize="12sp"
                    android:textColor="#666666" />
            </LinearLayout>

            <ImageButton
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@android:drawable/ic_menu_more"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="More options"
                android:padding="4dp" />
        </LinearLayout>

        <!-- Post Text -->
        <TextView
            android:id="@+id/txtPostText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Post content goes here..."
            android:textSize="15sp"
            android:textColor="#333333"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="12dp" />

        <!-- Post Image -->
        <ImageView
            android:id="@+id/imgPostImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:visibility="gone"
            android:contentDescription="Post image"
            android:layout_marginBottom="12dp" />

        <!-- Engagement Stats -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:background="#F5F5F5">

            <TextView
                android:id="@+id/txtLikeCount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="120 likes"
                android:textSize="14sp"
                android:textColor="#666666"
                android:drawableStart="@android:drawable/btn_star_big_on"
                android:drawablePadding="4dp"
                android:gravity="center_vertical" />

            <TextView
                android:id="@+id/txtCommentShare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15 comments Â· 5 shares"
                android:textSize="14sp"
                android:textColor="#666666" />
        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:baselineAligned="false">

            <Button
                android:id="@+id/btnLike"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Like"
                android:textSize="14sp"
                android:textColor="#666666"
                android:drawableStart="@android:drawable/btn_star_big_off"
                android:drawablePadding="8dp"
                android:gravity="center"
                android:minHeight="40dp" />

            <Button
                android:id="@+id/btnComment"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Comment"
                android:textSize="14sp"
                android:textColor="#666666"
                android:drawableStart="@android:drawable/ic_menu_edit"
                android:drawablePadding="8dp"
                android:gravity="center"
                android:minHeight="40dp" />

            <Button
                android:id="@+id/btnShare"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Share"
                android:textSize="14sp"
                android:textColor="#666666"
                android:drawableStart="@android:drawable/ic_menu_share"
                android:drawablePadding="8dp"
                android:gravity="center"
                android:minHeight="40dp" />
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>









