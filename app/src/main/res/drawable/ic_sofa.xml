<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background gradient -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#E8E8E8"
                android:endColor="#D0D0D0"
                android:angle="135" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    <!-- Sofa base -->
    <item android:top="100dp" android:bottom="25dp" android:left="15dp" android:right="15dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#9E9E9E"
                android:endColor="#707070"
                android:angle="90" />
            <corners android:radius="6dp" />
        </shape>
    </item>
    <!-- Sofa back -->
    <item android:top="50dp" android:bottom="80dp" android:left="18dp" android:right="18dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#A0A0A0"
                android:endColor="#808080"
                android:angle="90" />
            <corners android:topLeftRadius="8dp"
                android:topRightRadius="8dp"
                android:bottomLeftRadius="4dp"
                android:bottomRightRadius="4dp" />
        </shape>
    </item>
    <!-- Tufted details -->
    <item android:top="65dp" android:bottom="65dp" android:left="35dp" android:width="3dp">
        <shape android:shape="rectangle">
            <solid android:color="#505050" />
        </shape>
    </item>
    <item android:top="65dp" android:bottom="65dp" android:right="35dp" android:width="3dp">
        <shape android:shape="rectangle">
            <solid android:color="#505050" />
        </shape>
    </item>
</layer-list>
